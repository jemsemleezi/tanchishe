<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake Game" Height="720" Width="1280"
        KeyDown="Window_KeyDown">
    <Grid>
        <Canvas Name="GameCanvas" Background="Black" />
        <TextBlock Name="ScoreTextBlock" Foreground="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBlock Name="LevelTextBlock" Foreground="White" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
    </Grid>
</Window>